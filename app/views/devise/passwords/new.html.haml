.col-lg-6.col-lg-offset-3
  .panel.panel-primary
    .panel-heading
      %h3.panel-title Forgot your password?
    .panel-body
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal'}) do |f|
        = devise_error_messages!

        %fieldset
          .form-group
            %label.col-lg-2.control-label= f.label :email
            .col-lg-10
              = f.email_field :email, autofocus: true, class: 'form-control'
          .form-group
            .col-lg-10.col-lg-offset-2
              %button.btn.btn-primary{type: 'submit'} Send me reset instructions
              &nbsp;&nbsp;
              = render "devise/shared/links"



